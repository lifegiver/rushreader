<!DOCTYPE html>
<html>
<head>
  <title>Rushreader</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <style type="text/css"><%= yield :stylesheets %></style>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="header">
  <div class="container_12">
    <div class="grid_3" onclick="location.href='/';" style="cursor:pointer;">RUSHREADER</div>
    <div class="grid_9">
      <ul class="nav">
        <% if user_signed_in? %>
          <li>
            <%= form_for (Article.new), :remote => true do |f| %>
              <%= f.text_field :link %>
              <%= f.submit %>
            <% end %>
          </li>
          <li>Welcome <%= current_user.email %></li>
          <li><%= link_to "Settings", settings_path %></li>
          <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>

        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="cal"><%= yield :cal %></div>
<div class="content">
  <div class="container_12">
    <div class="grid_12">
      <%= yield %>
    </div>
  </div>
</div>

<div class="footer">
  <div class="container_12">
    <div class="grid_12"><p>Â© 2011 Eugene Dorian, Alexander Lopez</p></div>
  </div>

</div>

</body>
</html>
